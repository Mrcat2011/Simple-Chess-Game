{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Raylib app",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/raylib_example",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build Raylib app",
            "internalConsoleOptions": "openOnSessionStart",
            "miDebuggerArgs": "-q",
            "logging": {
                "moduleLoad": false,
                "programOutput": true
            }
        }
    ]
}
